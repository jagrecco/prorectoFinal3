<%- layout('layouts/main')%>

<div class="container tarjetaSigin mt-4">

  <div class="row">
    <div class="col-md4 offset-1 col-10"> <!-- offset-md-4 -->
      <div class="card mt-4 text-center">
        <div class="card-header">
          <h3>Nuevo Usuario</h3>
        </div>
        <div class="card-body">
          <form action="/register" method="POST">
            <div class="form-group">
              <input type="texto" name="nombre" placeholder="Nombre" class="form-control">
            </div>
            <div class="form-group">
              <input type="texto" name="direccion" placeholder="Dirección" class="form-control">
            </div>
            <div class="form-group">
              <input type="texto" name="edad" placeholder="Edad" class="form-control">
            </div>
            <div class="form-group">
              <input type="texto" name="telefono" placeholder="Teléfono" class="form-control">
            </div>
            <div class="form-group">
              <input type="texto" name="foto" placeholder="Foto" class="form-control">
            </div>
            <div class="form-group">
              <input type="email" name="email" placeholder="Email" class="form-control">
            </div>
            <div class="form-group">
              <input type="password" name="password" placeholder="Password" class="form-control">
            </div>
            <button type="submit" class="btn btn-dark btn-block mt-4">
              Registrar
            </button>
          </form>
      
        </div>
      </div>
    </div>
  </div>
</div>


